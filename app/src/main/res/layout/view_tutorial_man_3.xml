<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/top1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/w3_img_padding_vertial"
        android:gravity="center|bottom">

        <ImageView
            android:id="@+id/t3_img01"
            android:layout_width="@dimen/w3_img_width"
            android:layout_height="@dimen/w3_img_height"
            android:adjustViewBounds="true"
            android:alpha="0"
            android:contentDescription="@string/app_name"
            android:src="@drawable/m_tutorial_03_img01" />

        <ImageView
            android:id="@+id/t3_img03"
            android:layout_width="@dimen/w3_img_width"
            android:layout_height="@dimen/w3_img_height"
            android:layout_marginLeft="@dimen/w3_img_padding_horizontal"
            android:adjustViewBounds="true"
            android:alpha="0"
            android:contentDescription="@string/app_name"
            android:src="@drawable/m_tutorial_03_img01" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/t3_ttlContainer"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/t3_img02"
            android:layout_width="@dimen/w3_img_width"
            android:layout_height="@dimen/w3_img2_height"
            android:adjustViewBounds="true"
            android:alpha="0"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/m_tutorial_03_img02" />

        <RelativeLayout
            android:layout_width="@dimen/w3_img_width"
            android:layout_height="@dimen/w3_img2_height"
            android:layout_marginLeft="@dimen/w3_img_padding_horizontal">

            <ImageView
                android:id="@+id/t3_img04"
                android:layout_width="@dimen/w3_img4_width"
                android:layout_height="@dimen/w3_img4_width"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:alpha="0"
                android:contentDescription="@string/app_name"
                android:paddingRight="15dp"
                android:paddingTop="20dp"
                android:src="@drawable/m_tutorial_03_img04" />

            <ImageView
                android:id="@+id/t3_img05"
                android:layout_width="@dimen/w3_tip_width"
                android:layout_height="@dimen/w3_tip_width"
                android:layout_above="@+id/t3_img04"
                android:layout_marginBottom="-30dp"
                android:layout_marginRight="-15dp"
                android:layout_toLeftOf="@+id/t3_img04"
                android:adjustViewBounds="true"
                android:alpha="0"
                android:contentDescription="@string/app_name"
                android:src="@drawable/m_tutorial_03_img05" />

            <ImageView
                android:id="@+id/t3_img06"
                android:layout_width="@dimen/w3_tip_width"
                android:layout_height="@dimen/w3_tip_width"
                android:layout_above="@+id/t3_img04"
                android:layout_alignLeft="@+id/t3_img04"
                android:layout_marginBottom="-15dp"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:alpha="0"
                android:contentDescription="@string/app_name"
                android:src="@drawable/m_tutorial_03_img06" />

            <ImageView
                android:id="@+id/t3_img07"
                android:layout_width="@dimen/w3_tip_width"
                android:layout_height="@dimen/w3_tip_width"
                android:layout_above="@+id/t3_img04"
                android:layout_marginBottom="-35dp"
                android:layout_marginLeft="-20dp"
                android:layout_toRightOf="@+id/t3_img04"
                android:adjustViewBounds="true"
                android:alpha="0"
                android:contentDescription="@string/app_name"
                android:src="@drawable/m_tutorial_03_img07" />

            <ImageView
                android:id="@+id/t3_img08"
                android:layout_width="@dimen/w3_tip_width"
                android:layout_height="@dimen/w3_tip_width"
                android:layout_alignBottom="@+id/t3_img04"
                android:layout_marginBottom="-12dp"
                android:layout_marginLeft="-15dp"
                android:layout_toRightOf="@+id/t3_img04"
                android:adjustViewBounds="true"
                android:alpha="0"
                android:contentDescription="@string/app_name"
                android:src="@drawable/m_tutorial_03_img08" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/t3_ttlContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ttl_container_height"
        android:layout_alignParentBottom="true"
        android:background="#F797B6" />

    <TextView
        android:id="@+id/t3_ttl01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t3_ttlContainer"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:alpha="0"
        android:gravity="center"
        android:text="@string/m1_text_3"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/t3_ttl02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t3_ttl01"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="26sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:alpha="0"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="@string/m2_text_1"/>
</RelativeLayout>